{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2018"
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@view/*": [
        "./src/view/*"
      ],
      "@scripts/*": [
        "./src/scripts/*"
      ],
      "@images/*": [
        "./src/images/*"
      ],
      "@style/*": [
        "./src/style/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}